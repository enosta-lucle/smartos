---
import { Image } from "astro:assets";
import { range } from "lodash-es";
import type { Media } from "$/types/strapi.type";

type Props = {
  class?: string;
  items: Array<{ name: string; href: string; logo: Media }>;
};

const { items } = Astro.props;
---

<section class:list={["container", Astro.props.class]}>
  <div class="flex flex-col items-center">
    <h2 class="text-center text-lg font-medium text-gray-700">
      Được tín nhiệm bởi những doanh nghiệp tăng trưởng mạnh mẽ:
    </h2>

    <div
      class:list={[
        "carousel carousel-center max-w-full",
        "mt-8",
        "*:mx-5",
        "md:flex md:flex-wrap md:justify-center md:gap-x-17.5 md:gap-y-10",
      ]}
    >
      {
        items?.map(({ logo, name }) => (
          <div class="carousel-item w-37.5 h-16.5 rounded-2xl flex items-center justify-center">
            <Image src={logo.url} alt={name} width={150} height={100} class="size-full object-contain" />
          </div>
        ))
      }
    </div>
  </div>
</section>
