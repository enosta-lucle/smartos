---
import { range } from "lodash-es";
---

<section class:list={["container", Astro.props.class]}>
  <h3 class="text-2xl font-bold text-center">Customer Success</h3>

  <div class:list={["mt-8 flex flex-col items-center gap-6", "md:flex-row"]}>
    {
      range(3).map((idx) => (
        <div class="w-full h-72.5 p-4 border border-gray-200 rounded-2xl flex flex-col items-center">
          <div class="bg-gray-100 h-37.5 w-full rounded-xl shrink-0" />

          <div class="w-20 h-10 flex justify-center items-center mt-6 bg-gray-100">Brand</div>
          <span class="font-semibold text-md mt-3">Nhà trọ Văn Minh</span>
        </div>
      ))
    }
  </div>
</section>
