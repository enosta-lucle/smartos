---
import Icon from "$/components/icon.astro";

type Props = {
  label?: string;
  icon?: string;
  href?: string;
  variant: "solid" | "text" | "white";
  className?: string;
};

const { label, icon, variant, className } = Astro.props;

const VARIANTS = {
  solid: "bg-primary text-blue-abyss rounded-lg",
  text: "text-slate-dusk",
  white: "bg-white text-blue-abyss",
};
---

<button class:list={["flex items-center justify-center gap-1.5 h-10", VARIANTS[variant], className]}>
  {
    icon ? (
      <>
        <span>{label}</span>
        <Icon src={icon} />{" "}
      </>
    ) : (
      label
    )
  }
</button>
